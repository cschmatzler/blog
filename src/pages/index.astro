---
import PageLayout from "../layouts/PageLayout.astro";
import PageMeta from "../components/PageMeta.astro";
---

<PageLayout>
  <PageMeta title="Christoph Schmatzler" slot="meta" />
  <Fragment slot="main">
    <h1 class="bg-gradient-to-br from-yellow to-pink bg-clip-text text-5xl font-extrabold text-transparent">
      Christoph Schmatzler
    </h1>
    <p class="mt-3 flex flex-wrap text-xl text-subtext">
      <span>Developer.</span>
      <span>Presumed blog publisher.</span>
      <span>Self-proclaimed okay at doing things.</span>
    </p>
  </Fragment>
</PageLayout>
